@using A2C.Resources
@model A2C.Model.ProductCatalogueSchemeModel
@Scripts.Render("~/Scripts/js/common")
@{
    <div class="panel-group smart-accordion-default" id="accordionscheme">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a aria-expanded="true" href="#collapsescheme" data-toggle="collapse" data-parent="#accordion">
                        <i class="fa fa-lg fa-angle-down pull-right"></i> <i class="fa fa-lg fa-angle-up pull-right"></i>
                        <label id="lblSelectedScheme">@(@Resource.Select + " " + @Resource.Scheme)</label>
                    </a>
                </h4>
            </div>
            <div class="panel-collapse collapse in" id="collapsescheme" aria-expanded="true">
                <div class="panel-body no-padding">
                    <div class="row">                      
                        <section class="col col-3">
                            @Html.LabelFor(c => c.SelectedSeries, new { @class = "label" })
                            @Html.DropDownListFor(x => x.SelectedSeries, new SelectList(Model.SeriesList, "Value", "Text"), new { id = "seriesLable", @class = "select2 select2-offscreen" })
                        </section>
                        <section class="col col-3">
                            @Html.LabelFor(c => c.SelectedQualificationType, new { @class = "label" })
                            @Html.DropDownListFor(x => x.SelectedQualificationType, new SelectList(Model.QualificationTypeList, "Value", "Text"), new { id = "qulificationType", @class = "select2 select2-offscreen" })
                        </section>
                        <section class="col col-6">
                            @Html.Label(" ")
                            <div>
                                <a id="BtnSchemeSubmit" class="btn btn-icon A2CIconButton A2CIconButtonTopMargin" rel="tooltip" onclick="GetSchemes();" href="javascript:void(0);" data-placement="bottom" data-original-title="@Resource.Search" title="@Resource.Search">
                                    <i class="fa fa-search"></i>
                                </a>
                            </div>
                        </section>
                    </div>
                    <div class="row">
                        <section class="col col-12" style="width:100%">
                            <div id="schemeGrid"></div>
                        </section>
                    </div>

                </div>
            </div>
        </div>

    </div>
    <div id="pcDetailLevel2TabViewScheme" hidden="hidden">
        @Html.Label(" ")
        <ul id="schemeDetailLevel2ChildTab" class="nav nav-tabs bordered">
            <li class="">
